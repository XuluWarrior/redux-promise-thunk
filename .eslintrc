{
  "extends": "eslint-config-airbnb",
  "env": {
    "mocha": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "expect": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "destructuring": true,
    "defaultParams": true,
    "templateStrings": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "padded-blocks": 0,
    "comma-dangle": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-expressions": 0
  }
}